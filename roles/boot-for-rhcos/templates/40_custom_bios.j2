#!/bin/sh
exec tail -n +3 $0
# This file provides an easy way to add custom menu entries.  Simply type the
# menu entries you want to add after this comment.  Be careful not to change
# the 'exec tail' line above.
menuentry 'coreos' {
        set root='{{ RHCOS_BOOT_DISK }}'
        linux16 {{ RHCOS_BOOT_PATH }}/{{ RHCOS_BOOT_KERNEL }} coreos.inst=yes coreos.inst.install_dev={{ RHCOS_INSTALL_DEV }} rd.neednet=1 console=tty0 console=ttyS0 coreos.live.rootfs_url={{ RHCOS_KERNEL_PATH }}/{{ RHCOS_BOOT_ROOTFS }} coreos.inst.ignition_url={{ RHCOS_IGN_PATH }}/{{ group_names | join('') }}.ign {{ RHCOS_IP }} {{ RHCOS_OPTS }}
        initrd16 {{ RHCOS_BOOT_PATH }}/{{ RHCOS_BOOT_INITRD }}
}
